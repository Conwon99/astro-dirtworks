---

<Layout title={title} description={description} canonical={canonical} jsonLd={jsonLd}>
  <Navigation client:load />
  
  <main class="min-h-screen">
    {/* Hero Section */}
    <section class="bg-gradient-to-br from-green-600 to-green-800 text-white py-20 px-4">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-12">
          <h1 class="font-display text-4xl md:text-5xl font-bold mb-6">
            Service Locations
          </h1>
          <p class="text-xl md:text-2xl max-w-3xl mx-auto">
            Professional Landscaping & Building Services Across Ayrshire & Glasgow
          </p>
          <p class="text-lg mt-4 max-w-2xl mx-auto opacity-90">
            Dirtworks Landscaping provides comprehensive landscaping and building services throughout Ayrshire and Glasgow. 
            Our strategically positioned teams ensure rapid response times for all your landscaping and building needs.
          </p>
        </div>
      </div>
    </section>

    {/* Ayrshire Locations */}
    <section class="py-16 px-4 bg-white">
      <div class="container mx-auto max-w-6xl">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-gray-900 mb-8">
          Ayrshire
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {ayrshireLocations.map((location) => (
            <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="font-display text-xl font-bold text-gray-900 mb-2">
                    {location.name}
                  </h3>
                  <p class="text-sm text-gray-600 mb-3">Service Areas:</p>
                  <p class="text-sm text-gray-700 mb-4">
                    {location.serviceAreas.join(", ")}
                  </p>
                </div>
              </div>
              <a 
                href={`/locations/${location.slug}`}
                class="inline-flex items-center text-green-600 font-semibold hover:text-green-700 transition-colors group"
              >
                View Details
                <ArrowRight class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" />
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    {/* Glasgow Locations */}
    <section class="py-16 px-4 bg-gray-50">
      <div class="container mx-auto max-w-6xl">
        <h2 class="font-display text-3xl md:text-4xl font-bold text-gray-900 mb-8">
          Glasgow
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {glasgowLocations.map((location) => (
            <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
              <div class="flex items-start justify-between mb-4">
