---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
import ContactForm from '../components/ContactForm';

const title = "Contact Us | Dirtworks Landscaping";
const description = "Get in touch with Dirtworks Landscaping for your free quote. Contact us via phone, email, or fill out our contact form. Serving Ayrshire and Glasgow.";
const canonical = "https://dirtworkslandscaping.co.uk/contact";
---

<Layout title={title} description={description} canonical={canonical}>
  <main class="min-h-screen bg-background">
    <Navigation client:load />
    
    <section class="pt-32 pb-20 px-2 sm:px-6 lg:px-8">
      <div class="container mx-auto max-w-5xl">
        {/* Header */}
        <div class="text-center mb-12 px-2">
          <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-[hsl(var(--asphalt-grey))] mb-4">
            Contact Us
          </h1>
          <p class="text-lg sm:text-xl text-[hsl(var(--asphalt-grey))] max-w-2xl mx-auto">
            Get in touch for your free quote. We're here to help transform your outdoor space.
          </p>
        </div>

        {/* Contact Form */}
        <div class="bg-card rounded-2xl p-4 sm:p-8 md:p-12 shadow-lg">
          <ContactForm client:load />
        </div>
      </div>
    </section>

    <Footer client:load />
  </main>
</Layout>

